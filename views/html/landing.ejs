<%- include('../partials/header.ejs'); -%>
  <div class="container">
    <section>
      <div class="icon">
        <div class="pill"></div>
        <i class="fa fa-check" aria-hidden="true"></i>
      </div>
      <span class="h3">Notes App</span>
    </section>
    <section>
      <main>
        <div class="row">
          <div class="d-flex">
            <div class="">
              <input class="field" type="text" placeholder="enter the text here">
            </div>
            <div class="">
               <a href="/add"> <button>Add</button></a>
              </div>
            </div>
          </div>
        </div>
        <div class="container notes-main ">
          <hr>
         <% notes.forEach(note => { %>
          <div class="row">
            <div class=" card ">
              <div class="card-header ">
                <%= note.title %> 
              </div>
              <div class="card-body ">
                <h5 class="card-title ">Description:</h5>
                <p class="card-text ">
                  <%= note.description %> 
                </p>
                <a href="# " class="btn btn-primary ">More info</a>
              </div>
            </div>
          </div>
         <% }) %> 
